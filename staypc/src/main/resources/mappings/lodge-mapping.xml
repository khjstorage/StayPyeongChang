<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lodge">
	
	<!-- 메인페이지 -->
	<select id="listMain" resultType="lodge">
	   <![CDATA[
		SELECT lodge_code, main_image, charge, title FROM staypc_lodge
		where rownum <= 9
		order by lodge_code DESC
		]]>
	</select>
	
	<select id="count" resultType="int">
        SELECT COUNT(distinct l.lodge_code) 
         FROM  staypc_lodge l, staypc_lodge_book d
        <include refid="search"></include>
    </select>

	<select id="read" resultType="lodge" parameterType="int">
		SELECT * FROM staypc_lodge WHERE LODGE_CODE=#{lodge_Code}
	</select>	


	<select id="readImg" resultType="lodgeImage">
      select * from STAYPC_LODGE_IMAGE WHERE LODGE_CODE = #{lodge_Code}
	</select>

   <select id="listAll" resultType="lodge">
       <include refid="pagingHeader"></include>
        SELECT DISTINCT l.lodge_code, l.title, l.charge, l.main_image
        FROM  staypc_lodge l, staypc_lodge_book d
        <include refid="search"></include>
        order by lodge_code DESC
        <include refid="pagingFooter"></include>
    </select>

    <sql id="pagingHeader">
        SELECT * FROM (
        SELECT ROWNUM AS rn, A.* FROM (
    </sql>

	<sql id="search">
        WHERE max_people  like '%'||#{num}||'%' and
        location   like '%'||#{keyword}||'%' and
        l.lodge_code = d.lodge_code
        <if test="sdate!=''">
        <![CDATA[
        and d.available = 'Y'
        and d.book_date between #{sdate} and TO_DATE(#{edate})-1
        ]]>
        </if>
    </sql>
    
	   <sql id="pagingFooter">
           ) A
        ) WHERE rn BETWEEN #{start} AND #{end}
    </sql> 
    
	<!-- 위시 리스트 시작 -->
	  <insert id="insertWish" parameterType="lodge" >
      	  INSERT INTO STAYPC_WISH(LODGE_CODE,
                             ID,
                             TITLE,
                             REG_DATE)
	  				VALUES  (#{lodge_Code},
                            #{id},
                            #{title},
           			         SYSDATE
                            )
    </insert>

     <delete id="deleteWish">
   	  DELETE FROM STAYPC_WISH
   	  WHERE LODGE_CODE=#{lodge_Code}
  	 </delete>

    <resultMap id="lodgeWishResultMap" type="java.util.HashMap">   
        <id property="id" column="id" />
        <result property="lodge_Code" column="lodge_Code"/>
        <result property="title" column="title"/>
        <result property="reg_Date" column="reg_Date"/>
        <collection property="staypcLodge" javaType="java.util.ArrayList" resultMap="staypcLodgeResultMap"/>
    </resultMap>
    <resultMap id="staypcLodgeResultMap" type="java.util.HashMap">
         <id property="lodge_Code" column="lodge_Code" />
         <result property="main_Image" column="main_Image"/>
    </resultMap>

    <select id="getWishList" parameterType="lodge" resultMap="lodgeWishResultMap">
  		<![CDATA[					
	    	 SELECT b.MAIN_IMAGE, a.title, a.REG_DATE FROM STAYPC_WISH a
            		inner join staypc_lodge b
               				on a.lodge_Code = b.lodge_Code              
            WHERE a.id=#{id}
		]]>
    </select>	
    <!-- 위시리스트 끝 -->
</mapper>

